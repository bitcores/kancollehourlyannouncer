<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.bitcores.kancollehourlyannouncer"
    android:versionCode="1"
    android:versionName="1.2.1a" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />
    
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.bitcores.kancollehourlyannouncer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".AnnounceService" >
        </service>
        <receiver
            android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ShuffleReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />
                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.DATA_SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="Kancolle Clock Medium"
            android:name=".WidgetMedium" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.bitcores.kancollehourlyannouncer.UPDATE_WIDGET" />
        	</intent-filter>
        	<meta-data
        	    android:name="android.appwidget.provider"
        	    android:resource="@xml/widgetmedium_info" 
        	/>
        </receiver>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="Kancolle Clock Large"
            android:name=".WidgetLarge" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.bitcores.kancollehourlyannouncer.UPDATE_WIDGET" />
        	</intent-filter>
        	<meta-data
        	    android:name="android.appwidget.provider"
        	    android:resource="@xml/widgetlarge_info" 
        	/>
        </receiver>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="Kancolle Clock Medium Large"
            android:name=".WidgetMediumLarge" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.bitcores.kancollehourlyannouncer.UPDATE_WIDGET" />
        	</intent-filter>
        	<meta-data
        	    android:name="android.appwidget.provider"
        	    android:resource="@xml/widgetmediumlarge_info" 
        	/>
        </receiver>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="Kancolle Clock Resizable"
            android:name=".WidgetResizable"
            android:enabled="@bool/is_post_api_16" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.bitcores.kancollehourlyannouncer.UPDATE_WIDGET" />
        	</intent-filter>
        	<meta-data
        	    android:name="android.appwidget.provider"
        	    android:resource="@xml/widgetresizable_info" 
        	/>
        </receiver>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="Kancolle Secretary"
            android:name=".WidgetSecretary"
            android:enabled="@bool/is_post_api_16" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.bitcores.kancollehourlyannouncer.UPDATE_WIDGET" />
        	</intent-filter>
        	<meta-data
        	    android:name="android.appwidget.provider"
        	    android:resource="@xml/widgetsecretary_info" 
        	/>
        </receiver>
            
    </application>

</manifest>
