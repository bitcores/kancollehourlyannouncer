<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearanceSpinnerItem</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        
    </style> 
    
    <style name="titletext" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="smalltext" parent="AppBaseTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="medtext" parent="AppBaseTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="bigtext" parent="AppBaseTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="hugetext" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#ECECEC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="medclocktext" parent="AppBaseTheme">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
    </style>
    
    <style name="bigclocktext" parent="AppBaseTheme">
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
    </style>
    
    <style name="button" parent="AppBaseTheme">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>
        


</resources>
